<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:ScheduleMADI.Interfaces"
             xmlns:controls="clr-namespace:ScheduleMADI"
             xmlns:externals="clr-namespace:ScheduleCore.Models.Madi;assembly=ScheduleCore" 
             x:Class="ScheduleMADI.ExamPage" x:Name="this"
             x:DataType="vm:IExamPageViewModel">
    <StackLayout VerticalOptions="FillAndExpand">
        <Grid Margin="15">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />

            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>


            <Label Grid.Column="1" HorizontalTextAlignment="End" VerticalTextAlignment="Center" 
               Text="{Binding ScheduleTarget, Mode=TwoWay}"/>

        </Grid>

        <Border></Border>

        <ScrollView Orientation="Vertical" VerticalOptions="FillAndExpand" HorizontalOptions="CenterAndExpand">
            <CollectionView x:Name="cv" ItemsSource="{Binding Exams}" 
                        EmptyView="{Binding Placeholder}" VerticalOptions="FillAndExpand">

                <CollectionView.ItemTemplate>
                    <DataTemplate x:DataType="externals:Exam">
                        <controls:ExamCard
                              CardName="{Binding CardName, Mode=OneWay}"
                              CardProf="{Binding CardProf, Mode=OneWay}" 
                              CardRoom="{Binding CardRoom, Mode=OneWay}"
                              CardTime="{Binding CardDateTime, Mode=OneWay}"/>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
        </ScrollView>
    </StackLayout>
</ContentPage>